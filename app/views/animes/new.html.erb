<div class="anime-new">
 <%= form_for @anime do |f| %>
    <%= f.label :タイトル %>
    <br>
    <%= f.text_field :title, :size => 30 %>
    <br>
    <%= f.label :画像 %>
    <%= f.file_field :image %>
    <br>
    <%= f.label :概要  %>
    <br>
    <%= f.text_area :contents, :size => "30x10" %>
    <br>
    <%= f.label :エピソード  %>
    <br>
    <%= f.text_area :episode, :size => "30x2" %>
    <br>
    <%= f.label :プラットフォーム %>
    <br>
    <%= f.text_area :platform, :size => "30x2" %>
    <br>
    <%= f.select :category, [["長い", "long"], ["普通", "normal"], ["短い", "short"]], include_blank: "どの投稿？" %>
    <br>
    <br>
    <%= f.submit "投稿する" %>
 <% end %>
 <br>
 <%= link_to "ホームに戻る", animes_path %>
